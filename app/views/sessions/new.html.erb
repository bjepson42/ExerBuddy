<%= stylesheet_link_tag "sessions" %>

<p id=”alert”><%= alert %></p>
<h1>Sign in to FLEXT!</h1>
<%= form_tag login_path do |form| %>
  <div class=”field”>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class=”field”>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class=”actions”>
    <%= submit_tag "Login" %>
  </div>
<% end %>
