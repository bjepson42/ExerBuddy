<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @location.address %>
</p>

<p>
  <strong>Available Activities:</strong>
  <ul>
    <% @location.events.select("DISTINCT(ACTIVITY_ID)").each do |event| %>
      <li><%= link_to event.activity.name, event.activity %></li>
    <% end %>
  </ul>
</p>

<table class="table table-hover">
  <strong>Available Events:</strong>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Activity</th>
      <th>Location</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location.events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.date %></td>
        <td><%= link_to event.activity.name, event.activity %></td>
        <td><%= link_to event.location.name, event.location %></td>
        <td><%= event.location.address %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
