<!DOCTYPE html>
<html>
  <head>
    <title>ExerBuddy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.jpg') %>
  </head>
  <body>
    <nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-top">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar links -->

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <% if current_user %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" <%= link_to "Home", root_path %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" <%= link_to "Profile", user_path(current_user) %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" <%= link_to "Activities", activities_path%></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" <%= link_to "Events", events_path %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" <%= link_to "Locations", locations_path %></a>
            </li>
          </ul>
        <% else %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" <%= link_to "Home", root_path %></a>
            </li>
          </ul>
        <% end %>
      </div>

      <div>
        <% if current_user %>
          <%= link_to "<button type='button'>Log Out #{current_user.username}</button>".html_safe, logout_path %>
        <% end %>
      </div>
    </nav>
    <br>
    <br>

    <footer>
      <div>
        &copy; Copyright 2019 Beau & Anuj, All Rights Reserved.
      </div>
    </footer>


    <%= yield %>
  </body>
</html>
