<h1>My Event!</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Activity:</strong>
  <%= @event.activity.name %> with <%= link_to @event.user.name, @event.user %>
</p>

<p>
  <strong>Location:</strong>
  <%= link_to @event.location.name, @event.location %> -  <%= @event.location.address %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
