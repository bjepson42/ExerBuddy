<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class ="field">
    <%= form.label "My Name" %>
    <%= form.collection_select :user_id, User.all, :id, :name %>
  </div>

  <div class ="field">
    <%= form.label "Activity" %>
    <%= form.collection_select :activity_id, Activity.all, :id, :name %>
  </div>

  <div class ="field">
    <%= form.label "Location" %>
    <%= form.collection_select :location_id, Location.all, :id, :name %>
  </div>

  <div class ="field">
    <%= form.label "Friend Name" %>
    <%= form.collection_select :friend_user_id, User.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_select :date %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
