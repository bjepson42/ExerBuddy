<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</p>
      <ul>
    </div>
    <div>

      <% user.errors.full_messages.each do |message| %>
        <li id="error_message"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
  </div>
  <div class="field">
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :password %>
  </div>
  <div class="field">
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
  </div>
  <div class="field">
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= form.label :name %>
  </div>
  <div class="field">
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label "Age" %>
  </div>
  <div class="field">
    <%= form.select :age, options_for_select(18..150) %>
  </div>

  <div class="field">
    <%= form.label "Gender" %>
  </div>
  <div class="field">
    <%= form.select :gender, ['Male', 'Female', 'Other']%>
  </div>

  <div class="field">
    <%= form.label "Phone (123-456-7890)" %>
  </div>
  <div class="field">
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :email %>
  </div>
  <div class="field">
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :comment %>
  </div>
  <div class="field">
    <%= form.text_area :comment %>
  </div>

  <div class="field">
    <%= form.label :image %>
  </div>
  <div class="field">
    <%= form.file_field :image %>
  </div>

  <div class="field">
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
